<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sandbox" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- custom action bar color - use it's paren as actionBarStyle for primary colored action bar-->
    <style name="ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">?attr/colorPrimaryVariant</item>
        <item name="backgroundSplit">?attr/colorPrimaryVariant</item>
        <item name="backgroundStacked">?attr/colorPrimaryVariant</item>
    </style>

</resources>